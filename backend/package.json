{
  "name": "backend",
  "repository": "this-oliver/this-oliver",
  "main": "./src/index.js",
  "scripts": {
    "start": "npm run prod",
    "build": "tsc",
    "prod": "NODE_ENV=production node ./dist/index.js",
    "dev": "NODE_ENV=development nodemon ./src/index.ts",
    "test": "NODE_ENV=testing mocha",
    "test:silent": "mocha --reporter landing",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "bump": "npx fist-bump",
    "hook": "simple-git-hooks"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint-plugin-mocha": "^10.1.0",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "simple-git-hooks": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && npm run test:silent"
  },
  "lint-staged": {
    "*.{ts,js}": "npm run lint:fix"
  }
}